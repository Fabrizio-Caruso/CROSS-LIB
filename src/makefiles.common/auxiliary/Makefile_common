
###########################################################################
ifneq ($(COMSPEC),)
DO_WIN:=1
endif
ifneq ($(ComSpec),)
DO_WIN:=1
endif 

ifeq ($(DO_WIN),1)
EXEEXT = .exe
endif

ifeq ($(DO_WIN),1)
COMPILEDEXT = .exe
else
COMPILEDEXT = .out
endif

CROSS_LIB_PATH := cross_lib

BUILD_PATH ?= ../build

######################################

TILES_PATH ?= $(SOURCE_PATH)/tiles

