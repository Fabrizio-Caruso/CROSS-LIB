c65: c65_no_gfx

c65_no_gfx: 
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -t c65 \
	-D__CX16__ -DXSize=80 -DYSize=25 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_C65_SLOWDOWN) \
	-D__CONIO_GRAPHICS -D__NO_INIT_GRAPHICS -D_XL_NO_UDG \
	$(FULL_FILES) \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.prg


mega65: mega65_no_gfx

# -D__NO_SLEEP -D__NO_WAIT
mega65_no_gfx: 
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -t mega65 \
	-D__MEGA16__ -DXSize=80 -DYSize=25 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_MEGA65_SLOWDOWN) \
	-D__CONIO_GRAPHICS -D__NO_INIT_GRAPHICS -D_XL_NO_UDG \
	-D_XL_NO_JOYSTICK -D__NO_SLEEP -D__NO_WAIT \
	$(FULL_FILES) \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.prg


