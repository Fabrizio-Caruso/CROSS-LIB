
sym1_buffered: sym1_turn_based

sym1:
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -Cl -t sym1  \
	$(INCLUDE_OPTS) -D__VT100 -D__NO_INPUT \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_ALTAIR8800_SLOWDOWN) \
	-DXSize=36 -DYSize=16 \
	-D_XL_NO_JOYSTICK -D_XL_NO_COLOR -D__NO_SLEEP -D__NO_SLEEP_SEC  \
	-D__CONIO_GRAPHICS -D__NO_INIT_GRAPHICS -D__NO_SCREEN_COLOR_INIT -D__NO_CLEAR_SCREEN -D__NO_PRINT \
	$(FULL_FILES) \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.bin


sym1_32k:
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -Cl -t sym1 --config sym1-32k.cfg  \
	$(INCLUDE_OPTS) -D__VT100 -D__NO_INPUT \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_ALTAIR8800_SLOWDOWN) \
	-DXSize=36 -DYSize=16 \
	-D_XL_NO_JOYSTICK -D_XL_NO_COLOR -D__NO_SLEEP -D__NO_SLEEP_SEC  \
	-D__CONIO_GRAPHICS -D__NO_INIT_GRAPHICS -D__NO_SCREEN_COLOR_INIT -D__NO_CLEAR_SCREEN -D__NO_PRINT \
	$(FULL_FILES) \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.bin


sym1_turn_based: 
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -Cl -t sym1  \
	-D__ALT_SLEEP \
	-D__NO_SCREEN_COLOR_INIT \
	-DTURN_BASED -D_XL_NO_JOYSTICK  -D_XL_NO_COLOR \
	-D__CONIO_GRAPHICS -D__NO_INIT_GRAPHICS \
	$(FULL_FILES)
	# -o $(BUILD_PATH)/X$(GAME_NAME)_$@.lod
	# $(TOOLS_PATH)/cc65/osic1p/srec_cat $(BUILD_PATH)/X$(GAME_NAME)_$@.lod -binary -offset 0x200 -o $(BUILD_PATH)/X$(GAME_NAME)_$@.c1p -Ohio_Scientific -execution-start-address=0x200	
	# rm $(BUILD_PATH)/X$(GAME_NAME)_$@.lod
	# mv $(BUILD_PATH)/X$(GAME_NAME)_$@.c1p $(BUILD_PATH)/X$(GAME_NAME)_$@.lod
