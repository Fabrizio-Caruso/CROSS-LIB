bbc_test: $(TOOLS_PATH)/bbc/bbcim$(COMPILEDEXT)
	$(VBCC_COMPILER) +bbc -v -O1 $(VBCC_BBC_TEST_OPTS) $(INCLUDE_OPTS) \
	-D__NORMALIZED_RAND -D__BBC__ -D_XL_NO_JOYSTICK \
	-DXSize=39 -D__BBC_MODE=7 \
	-DYSize=22 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_BBC_SLOWDOWN) \
	-D__STDIO -DEVEN_LOOP_MOVE -DTURN_BASED_SKULL_MIN_SLOWDOWN_SCALE=1 -DTURN_BASED_GHOST_MIN_SLOWDOWN_SCALE=1 \
	-DTURN_BASED_EFFECT_SCALE=1 -DTURN_BASED_WAIT_SCALE=1 \
	-D_XL_NO_COLOR \
	-D_XL_NO_SLEEP \
	-DTURN_BASED \
	-D__BUFFERED_GRAPHICS \
	-D__NO_PRINT -D__NO_INPUT \
	-D__DEFAULT_CLEAR_SCREEN \
	$(CROSS_LIB_PATH)/display/init_graphics/vbcc/bbc_init_graphics_test.c \
	$(FULL_FILES) -o xchase
	$(TOOLS_PATH)/bbc/bbcim$(COMPILEDEXT) -a X$(GAME_NAME)_$@.img xchase
	rm -rf xchase
	rm -rf xchase.inf
	mv X$(GAME_NAME)_$@.img $(BUILD_PATH)

bbc2_test: $(TOOLS_PATH)/bbc/bbcim$(COMPILEDEXT)
	$(VBCC_COMPILER) +bbc2 -v -O1 $(VBCC_BBC_TEST_OPTS) $(INCLUDE_OPTS) \
	-D__NORMALIZED_RAND -D__BBC__ -D_XL_NO_JOYSTICK \
	-DXSize=20 -D__BBC_MODE=2 \
	-DYSize=22 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_BBC_SLOWDOWN) \
	-D__STDIO -DEVEN_LOOP_MOVE -DTURN_BASED_SKULL_MIN_SLOWDOWN_SCALE=1 -DTURN_BASED_GHOST_MIN_SLOWDOWN_SCALE=1 \
	-DTURN_BASED_EFFECT_SCALE=1 -DTURN_BASED_WAIT_SCALE=1 \
	-D_XL_NO_COLOR \
	-D_XL_NO_SLEEP \
	-DTURN_BASED \
	-D__BUFFERED_GRAPHICS \
	-D__ALT_PRINT \
	-D__DEFAULT_CLEAR_SCREEN \
	$(CROSS_LIB_PATH)/display/init_graphics/vbcc/bbc_init_graphics_test.c \
	$(CROSS_LIB_PATH)/display/alt_print/memory_mapped_alt_print.c \
	$(FULL_FILES) -o xchase
	$(TOOLS_PATH)/bbc/bbcim$(COMPILEDEXT) -a X$(GAME_NAME)_$@.img xchase
	rm -rf xchase
	rm -rf xchase.inf
	mv X$(GAME_NAME)_$@.img $(BUILD_PATH)

