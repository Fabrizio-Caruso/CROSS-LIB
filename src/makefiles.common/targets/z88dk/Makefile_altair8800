altair8800:
	$(Z88DK_PATH)$(MYZ88DK) +altair8800 $(SCCZ80_OPTS) \
	$(INCLUDE_OPTS) -D__VT100 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_ALTAIR8800_SLOWDOWN) \
	-DXSize=79 -DYSize=23 \
	-D_XL_NO_JOYSTICK -D_XL_NO_COLOR \
	-D__CONIO_GRAPHICS -D__NO_INIT_GRAPHICS -D__NO_SCREEN_COLOR_INIT \
	-create-app -o$(BUILD_PATH)/X$(GAME_NAME)_$@.bin \
	$(FULL_FILES)
