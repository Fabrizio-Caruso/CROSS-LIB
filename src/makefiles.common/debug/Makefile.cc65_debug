	-DBIT_MAPPED_4_DUMMY -DNO_INIT_GRAPHICS \
	-DDEFAULT_CLEAR_SCREEN \
	-DNO_WAIT \
	-DNO_SLEEP \
	$(SOURCE_PATH)/end_screen.c \
	$(FULL_FILES) \
	-o $(BUILD_PATH)/FULL_supervision_dummy.sv
	

