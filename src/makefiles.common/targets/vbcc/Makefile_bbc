
# bbc: bbc_buffered

# _BBC_SLOWDOWN=500

bbc: $(TOOLS_PATH)/bbc/bbcim$(COMPILEDEXT)
	$(VBCC_COMPILER) +bbc -v $(VBCC_BBC_OPTS) $(INCLUDE_OPTS) \
	-D__NORMALIZED_RAND -D__BBC__ \
	-DXSize=40 -D__BBC_MODE=7 -D__BBC_GRAPHICS -D_XL_NO_UDG \
	-DYSize=22 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_BBC_SLOWDOWN) \
	-D_XL_NO_COLOR \
	-D__ALT_SLEEP \
	-D_XL_NO_JOYSTICK \
	-D__DEFAULT_CLEAR_SCREEN \
	$(CROSS_LIB_PATH)/display/init_graphics/vbcc/bbc_init_graphics.c \
	$(FULL_FILES) -o xchase
	$(TOOLS_PATH)/bbc/bbcim$(COMPILEDEXT) -a X$(GAME_NAME)_$@.img xchase
	rm -rf xchase
	rm -rf xchase.inf
	mv X$(GAME_NAME)_$@.img $(BUILD_PATH)

bbc2: $(TOOLS_PATH)/bbc/bbcim$(COMPILEDEXT)
	$(VBCC_COMPILER) +bbc2 -v -O1 $(VBCC_BBC_OPTS) $(INCLUDE_OPTS) \
	-D__NORMALIZED_RAND -D__BBC__ -D_XL_NO_JOYSTICK \
	-DXSize=20 -D__BBC_MODE=2 -D__BBC_GRAPHICS \
	-DYSize=22 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_BBC_SLOWDOWN) \
	-D_XL_NO_SLEEP \
	-D__NO_PRINT -D__NO_INPUT \
	-D__DEFAULT_CLEAR_SCREEN \
	$(CROSS_LIB_PATH)/display/init_graphics/vbcc/bbc_init_graphics.c \
	$(FULL_FILES) -o xchase
	$(TOOLS_PATH)/bbc/bbcim$(COMPILEDEXT) -a X$(GAME_NAME)_$@.img xchase
	rm -rf xchase
	rm -rf xchase.inf
	mv X$(GAME_NAME)_$@.img $(BUILD_PATH)

