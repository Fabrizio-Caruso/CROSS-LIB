none_no_graphics:
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -t none -c \
	-D__BBC__ \
	-D__GCC_BUFFERED__ \
	-DFORCE_XSIZE=79 \
	-DFORCE_YSIZE=22 \
	-DNO_SLEEP \
	-DNO_COLOR \
	-DNO_PRINT \
	-DTINY_GAME \
	-DNO_WAIT \
	-DTURN_BASED \
	-DNO_GRAPHICS \
	-DNO_INPUT \
	-DNO_INIT_GRAPHICS \
	-DALT_PRINT \
	-DDEFAULT_CLEAR_SCREEN \
	$(TINY_FILES)
	$(CC65_PATH)/ld65$(EXE) -t none \
	--obj-path $(SOURCE_PATH) \
	-m $(BUILD_PATH)/none_no_graphics.map \
	-o $(BUILD_PATH)/none_no_graphics.bin \
	$(TINY_OBJ)

