# ---------------------------------------------
#  System               Value               
# ---------------------------------------------
#  Linux                linux or linux2 (*) 
#  Windows              win32               
#  Windows/Cygwin       cygwin              
#  Windows/MSYS2        msys                
#  Mac OS X             darwin              
#  OS/2                 os2                 
#  OS/2 EMX             os2emx              
#  RiscOS               riscos              
#  AtheOS               atheos              
#  FreeBSD 7            freebsd7            
#  FreeBSD 8            freebsd8            
#  FreeBSD N            freebsdN            
#  OpenBSD 6            openbsd6            
# ---------------------------------------------

def read_config_option(section, option):
        if config.has_option(section,option):
            return config.get(section,option)
        else:
            return ""

def read_config():
    if python_version==2:
        import ConfigParser
        
        global verbose
        
        global default_threads
        global sccz80_compiler_opts 
        global zsdcc_compiler_opts
        global cmoc_compiler_opts

        global native_compiler
        
        global tool_compiler
        
        global c64_emulator
        global vic20_emulator
        global plus4_emulator
        global pet_emulator
        global cbm2_emulator
        global cbm50x_emulator
        global c128_emulator        
        
        global config 
        
        config = ConfigParser.SafeConfigParser()
    else:
        import configparser

        config = configparser.ConfigParser()
    try:
        config.read('config.ini')
        
        verbose = read_config_option("verbosity","verbose")
        if verbose!="":
            verbose=int(verbose)
        else:
            verbose=0
        if verbose:
            print("Verbose Mode ON")
        else:
            print("Verbose Mode OFF")

        if verbose:
            print("Config file found with: " + str(config.sections()))
            print("")
        
        default_threads = read_config_option("build","threads") 

        sccz80_compiler_opts = read_config_option("build","sccz80_compiler_opts") 
        zsdcc_compiler_opts = read_config_option("build","zsdcc_compiler_opts")
        cmoc_compiler_opts = read_config_option("build","cmoc_compiler_opts")
        
        c64_emulator = read_config_option("run", "c64_emulator")
        vic20_emulator = read_config_option("run", "vic20_emulator")
        plus4_emulator = read_config_option("run", "plus4_emulator")
        pet_emulator = read_config_option("run", "pet_emulator")
        # cbm2_emulator = read_config_option("run", "cbm2_emulator")
        # cbm50x_emulator = read_config_option("run", "cbm2_emulator")
        # c128_emulator = read_config_option("run", "c128_emulator")
        
        
        native_compiler = read_config_option("build", "native_compiler")
        
        tool_compiler = read_config_option("tools", "tool_compiler")
        
    except Exception as e:
        print("An exception occurred: " + str(e))
        # TODO: Ask the user to continue or exit
    else:
        if verbose:
            print("config.ini OK")
    print("")


# ---------------------------------------------
if __name__ == "__main__":
    platform = sys.platform
    
    print("----------------------------")
    print("Cross-Lib `xl` helper script")
    print("----------------------------")
    print("Platform: " + platform)
    print("Python:   " + str(python_version) + "." + str(python_subversion))
    if(platform in ["cygwin", "linux", "linux2", "darwin", "msys", "win32"]):
        GNU_MAKE="make"
    else:
        GNU_MAKE="gmake"

    if(platform in ["cygwin", "msys"]):
        NATIVE_EXTENSION="exe"
    else:
        NATIVE_EXTENSION="out"
        
    print("GNU MAKE command: " + GNU_MAKE)
    print("----------------------------")
    print("")
    
    
    read_config()

    # except error:
        # print(error)
        # exit()
    # except: 
        # print("Configuration file not found")
        # print("")
    
    if len(sys.argv)<2:
        print("You need to provide a command or a project name")
        help(sys.argv[1:])
        exit()
        
    params = sys.argv
    
    params = full_params(params)
        
    if params[1]=="run":
        run(params[1:])
    elif params[1]=="add":
        add(params[1:])
    elif params[1]=="remove":
        remove(params[1:])
    elif params[1]=="string":
        string(params[1:])
    elif params[1]=="commands":
        commands(params[1:])
    elif params[1]=="import":
        import_from_source(params[1:],False)
    elif params[1]=="rotate":
        rip(params[1:],True)
    elif params[1]=="rip":
        rip(params[1:],False)
    elif params[1]=="rebuild":
        rebuild(params[1:])
    elif params[1]=="make":
        shapes(params[1:]);
        rebuild(params[1:])    
    elif params[1]=="rename":
        rename(params[1:])
    elif params[1]=="clone":
        clone(params[1:])
    elif params[1]=="show":
        show(params[1:])
    elif params[1]=="test":
        test(params[1:])
    elif params[1]=="tile":
        tile(params[1:])
    elif params[1]=="shapes":
        shapes(params[1:])
    elif params[1]=="extend":
        extend(params[1:])
    elif params[1]=="build":
        build(params[1:])
    elif params[1]=="manual":
        manual()
    elif params[1]=="files":
        files()
    elif params[1]=="size":
        size(params[1:],0)
    elif params[1]=="debug":
        size(params[1:],1)
    elif params[1]=="create":
        create(params[1:])
    elif params[1]=="clean":
        clean(params[1:]+["-y"])
    elif params[1]=="reset":
        reset(params[1:])
    elif params[1]=="delete":
        delete(params[1:])
    elif params[1]=="list":
        list(params[1:])
    elif params[1]=="help":
        help(params[1:])
    elif params[1]=="tools":
        tools()
    else:
        print(params)
        build(params)
