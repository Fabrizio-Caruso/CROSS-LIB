c65: c65_no_gfx

c65_no_gfx: 
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -t c65 \
	-D__C65__ -DXSize=80 -DYSize=25 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_C65_SLOWDOWN) \
	-D__CONIO_GRAPHICS -D__NO_INIT_GRAPHICS -D_XL_NO_UDG \
	-D_XL_NO_JOYSTICK -D__NO_SLEEP -D__NO_WAIT -D__NO_INPUT -D_XL_NO_SOUND \
	$(FULL_FILES) \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.prg


mega65: mega65_no_gfx

# -D__NO_SLEEP -D__NO_WAIT
# -D__DEFAULT_CLEAR_SCREEN
# -DXSize=80 -DYSize=25
# -D__NO_CLEAR_SCREEN
# -D__NO_SLEEP -D_XL_NO_SLEEP -D__NO_WAIT -D__NO_INPUT -D_XL_NO_COLOR
mega65_no_gfx: 
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -t mega65 \
	-D__MEGA16__ -DXSize=80 -DYSize=12 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_MEGA65_SLOWDOWN) \
	-D__CONIO_GRAPHICS -D_XL_NO_UDG -D__ALT_SLEEP -D__NO_SLEEP_SEC   \
	-D_XL_NO_JOYSTICK   \
	$(FULL_FILES) \
	$(CROSS_LIB_PATH)/display/init_graphics/cc65/mega65/mega65_init_graphics.c \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.prg


