	-D__SC3000__ \
	-DZ88DK_JOYSTICK \
	-DFULL_GAME \
	-DSOUNDS \
	-DFORCE_BIT_BANG \
	-DEND_SCREEN -DBETWEEN_LEVEL \
	-DCONIO \
	-vn -lndos -create-app \
	-DANIMATE_PLAYER \
	-DUDG_GRAPHICS \
	-clib=default -pragma-redirect:fputc_cons=fputc_cons_generic \
	$(CROSS_LIB_PATH)/display/init_graphics/z88dk/udg/udg_init_graphics.c \
	$(ASSETS_PATH)/z88dk_xchase.asm \
	-o $(BUILD_PATH)/FULL_sg1000.prg \
	$(SOURCE_PATH)/end_screen.c \
	$(FULL_FILES)
	rm $(BUILD_PATH)/FULL_sg1000.prg
	rm $(BUILD_PATH)/FULL_sg1000_BSS.bin
	rm $(BUILD_PATH)/FULL_sg1000_DATA.bin


#############################
# SMC777

smc777:
	$(Z88DK_PATH)$(MYZ88DK) +cpm $(SCCZ80_OPTS) -subtype=smc777 $(INCLUDE_OPTS) \
	-D__SMC777__ \
	-DNO_SET_SCREEN_COLORS \
	-DNO_COLOR \
	-DFULL_GAME  \
	-DCONIO_VT52 \
	-DCONIO -DSOUNDS -DFORCE_PSG \
	-lndos \
	-DNO_INIT_GRAPHICS \
	$(FULL_FILES) \
	$(CROSS_LIB_PATH)/sound/z88dk/psg/psg_sounds.c \
	-create-app -o$(BUILD_PATH)/FULL_smc777.bin
	rm $(BUILD_PATH)/FULL_smc777.bin


#############################
# SMS

sms: sms_gfx



sms_gfx: $(ASSETS_PATH)/z88dk_xchase.asm 
	$(Z88DK_PATH)$(MYZ88DK) +sms $(SCCZ80_ROM_OPTS) $(INCLUDE_OPTS) -pragma-redirect:fputc_cons=fputc_cons_generic \
	-D__SMS__ \
	-DFORCE_XSIZE=32 \
	-DFORCE_YSIZE=22 \
	-DNO_SET_SCREEN_COLORS \
	-DANIMATE_PLAYER \
	-DFULL_GAME \
	-DCONIO -DFORCE_CONIO_LIB -DZ88DK_JOYSTICK \
	-lndos -DSLOW_DOWN=1400 \
	-DUDG_GRAPHICS $(CROSS_LIB_PATH)/display/init_graphics/z88dk/udg/udg_init_graphics.c \
	$(ASSETS_PATH)/z88dk_xchase.asm \
	$(FULL_FILES) \
	-create-app -o$(BUILD_PATH)/FULL_sms.bin
	rm $(BUILD_PATH)/FULL_sms.bin
	rm $(BUILD_PATH)/FULL_sms_BSS.bin
	rm $(BUILD_PATH)/FULL_sms_DATA.bin
	rm $(BUILD_PATH)/FULL_sms_BANK_1F.bin


sms_buffered:
	$(Z88DK_PATH)$(MYZ88DK) +sms $(SCCZ80_OPTS) -clib=sdcc_iy -startup=17 \
	$(INCLUDE_OPTS) \
	-pragma-include:$(CFG_PATH)/z88dk/zpragma_sms.inc \
	-D__SMS__ -DNEW_LIB \
	-DNO_COLOR \
	-DFULL_GAME \
	-DSTDLIB \
	-DLESS_TEXT \
	-create-app \
	-DBUFFERED \
	-DTURN_BASED \
	-DALT_PRINT \
	-DDEFAULT_CLEAR_SCREEN \
	-DNO_SLEEP \
	-DNO_WAIT \
	-o $(BUILD_PATH)/FULL_sms_buffered.bin \
	$(CROSS_LIB_PATH)/display/init_graphics/z88dk/sms/sms_init_graphics.c \
	$(CROSS_LIB_PATH)/display/alt_print/memory_mapped_alt_print.c \
	$(FULL_FILES) 
	rm $(BUILD_PATH)/FULL_sms_buffered_CODE.bin
	rm $(BUILD_PATH)/FULL_sms_buffered_DATA.bin
	rm $(BUILD_PATH)/FULL_sms_buffered_BSS.bin
	rm $(BUILD_PATH)/FULL_sms_buffered_UNASSIGNED.bin


#############################
# SOS

sos: sos_buffered

sos_buffered:
	$(Z88DK_PATH)$(MYZ88DK) +sos $(SCCZ80_OPTS) \
	$(INCLUDE_OPTS) \
	-lndos \
	-DSTDLIB \
	-DNO_COLOR \
	-DBUFFERED -DALT_PRINT \
	-DTURN_BASED \
	-DFULL_GAME -DLESS_TEXT -DNO_SLEEP -DNO_WAIT \
	-DNO_INIT_GRAPHICS \
	-DDEFAULT_CLEAR_SCREEN \
	-create-app -o sos_buffered \
	$(CROSS_LIB_PATH)/display/alt_print/memory_mapped_alt_print.c \
	$(FULL_FILES)
	rm sos_buffered
	mv sos_buffered.obj $(BUILD_PATH)/FULL_sos_buffered.obj


