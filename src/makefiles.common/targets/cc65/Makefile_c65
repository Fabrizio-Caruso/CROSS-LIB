mega65_test: 
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -t mega65 \
	-D__MEGA16__ -DXSize=80 -DYSize=12 \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_MEGA65_SLOWDOWN) \
	-D__CONIO_GRAPHICS -D_XL_NO_UDG -D__ALT_SLEEP -D__NO_SLEEP_SEC \
	$(FULL_FILES) \
	$(CROSS_LIB_PATH)/display/init_graphics/cc65/mega65/mega65_init_graphics.c \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.prg

mega65_80col_no_gfx: 
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -t mega65 \
	-D__MEGA16__ -DXSize=80 -DYSize=25 -D__CRAM2K \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_MEGA65_SLOWDOWN) \
	-D__CONIO_GRAPHICS -D_XL_NO_UDG -D__ALT_SLEEP -D__NO_SLEEP_SEC -D_XL_NO_JOYSTICK \
	$(FULL_FILES) \
	$(CROSS_LIB_PATH)/display/init_graphics/cc65/mega65/mega65_init_graphics.c \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.prg

mega65_40col_no_gfx: 
	$(CC65_PATH)$(MYCC65) $(INCLUDE_OPTS) -O -t mega65 \
	-D__MEGA16__ -DXSize=40 -DYSize=25 -D__MEGA65_40COL \
	-D_XL_SLOW_DOWN_FACTOR=$(_COMMON_SLOWDOWN_FACTOR)*$(_MEGA65_SLOWDOWN) \
	-D__CONIO_GRAPHICS -D_XL_NO_UDG -D__ALT_SLEEP -D__NO_SLEEP_SEC  \
	$(FULL_FILES) \
	$(CROSS_LIB_PATH)/display/init_graphics/cc65/mega65/mega65_init_graphics.c \
	-o $(BUILD_PATH)/X$(GAME_NAME)_$@.prg
